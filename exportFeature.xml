<?xml version="1.0" encoding="UTF-8"?>
<project name="org.eclipse.imp.runtime.feature" default="build.feature.jar" basedir=".">
	<import file="../org.eclipse.imp.runtime.feature/buildCommon.xml"/>
	<import file="../org.eclipse.imp.update/buildFeatureCommon.xml"/>

	<target name="init">
		<property name="feature.name"        value="org.eclipse.imp.runtime"/>
		<property name="feature.version"     value="${runtime.version}"/>
		<property name="feature.temp.folder" value="${basedir}/feature.temp.folder"/>
		<property name="feature.destination" value="${basedir}"/>
	</target>
	
	<target name="all.plugins"
		depends="build.shrike,build.smapi,build.smapifier,build.imp.runtime,build.lpg.runtime,build.imp.xform,build.imp.analysis">
	</target>

	<!-- RMF Copy the plugin jars to the 'plugins' folder so that exportUpdate script can see it -->
	<target name="gather.plugin.jars" depends="all.plugins">
		<delete failonerror="false">
			<fileset dir="plugins" includes="*.jar"/>
		</delete>
		<mkdir dir="plugins"/>
		<copy todir="plugins" file="../com.ibm.wala.shrike/com.ibm.wala.shrike_1.0.0.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.runtime/org.eclipse.imp.runtime_${plugins.version.32}.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.lpg.runtime/org.eclipse.imp.lpg.runtime_${plugins.version.31}.jar"/>
		<copy todir="plugins" file="../com.ibm.watson.smapi/com.ibm.watson.smapi_${plugins.version.31}.jar"/>
		<copy todir="plugins" file="../com.ibm.watson.smapifier/com.ibm.watson.smapifier_${plugins.version.31}.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.xform/org.eclipse.imp.xform_${plugins.version.31}.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.analysis/org.eclipse.imp.analysis_${plugins.version.31}.jar"/>
	</target>

	<!-- ========================================================================================= -->

	<target name="build.shrike">
		<antcall target="build.child">
			<param name="plugin.id" value="com.ibm.wala.shrike"/>
		</antcall>
	</target>

	<target name="build.smapi" depends="build.shrike">
		<antcall target="build.child">
			<param name="plugin.id" value="com.ibm.watson.smapi"/>
		</antcall>
	</target>

	<target name="build.smapifier" depends="build.smapi,build.imp.runtime">
		<antcall target="build.child">
			<param name="plugin.id" value="com.ibm.watson.smapifier"/>
		</antcall>
	</target>

	<target name="build.imp.runtime" depends="build.smapi">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.runtime"/>
		</antcall>
	</target>

	<target name="build.lpg.runtime" depends="build.smapifier,build.imp.xform,build.imp.runtime">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.lpg.runtime"/>
		</antcall>
	</target>

	<target name="build.imp.xform" depends="build.imp.runtime">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.xform"/>
		</antcall>
	</target>

	<target name="build.imp.analysis" depends="build.imp.runtime">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.analysis"/>
		</antcall>
	</target>
</project>
